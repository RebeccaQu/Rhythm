<!DOCTYPE html>
<html>
  <head>
    <title>Rhythm</title>
      <%= stylesheet_link_tag 'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
      <%= include_gon %> 
      <%= favicon_link_tag 'favicon.ico' %>

  </head>

  <body class="<%= controller_name %> <%= action_name %>">

  <% if controller_name == "home" && action_name == "index" %>
    <%= yield %>
  <% end %>

    <% if current_user && (current_page?(user_daily_rhythms_path(current_user))) %>
      <div id="nav">
      <ul>
        <!-- Logged in as <strong><%= current_user.email %></strong>. -->
        <p>R H Y T H M</p>
        <li> <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
        <li> <%= link_to "Profile", user_path(current_user), :class => 'navbar-link' %></li>
      </ul>
      </div>

    <% elsif current_user %>
      <div id="nav">
      <ul>
        <!-- Logged in as <strong><%= current_user.email %></strong>. -->
        <p>R H Y T H M</p>
        <li> <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %> </li>
      </ul>
      </div>

    <%# if current_page?(user_daily_rhythms_path(:user_id)) %>

    <% elsif current_physician && (current_page?(user_daily_rhythms_path(1))) %>
       <div id="nav">
      <ul>
        <p>R H Y T H M</p>
        <li> <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
        <li><%= link_to "Physician Profile", physician_path(current_physician), :class => 'navbar-link' %></li>
      </ul> 
      </div>


    <% elsif current_physician %>
       <div id="nav">
      <ul>
        <p>R H Y T H M</p>
        <li> <%#= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
        <li> <%#= link_to "Physician Profile", physician_path(current_physician), :class => 'navbar-link' %></li>
      </ul> 
      </div>

    <% elsif current_page?(root_path) %>
      <div id="nav">
        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %> 
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <%= link_to "Physician Sign Up", new_physician_registration_path %> 
        <%= link_to "Physician Sign In", new_physician_session_path %>
      </div>

    <% else %>
        
    <% end %>
  </div>


    <%# if notice %>
      <!-- <p class="alert alert-success"><%= notice %></p> -->
    <%# end %>

    <%# if alert %>
      <!-- <p class="alert alert-danger"><%= alert %></p> -->

  <% unless controller_name == "home" && action_name == "index" %>
    <%= yield %>
  <% end %>

  </body>
</html>