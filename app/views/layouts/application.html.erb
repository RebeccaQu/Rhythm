<!DOCTYPE html>
<html>
  <head>
    <title>Rhythm</title>
      <%= stylesheet_link_tag 'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
      <%= include_gon %>  
  </head>

  <body class="<%= controller_name %> <%= action_name %>">

  <% if controller_name == "home" && action_name == "index" %>
    <%= yield %>
  <% end %>


<!-- loop for nav bar -->
  <% if current_user %>
    <% if current_page?(user_path(current_user)) %>
      <div class="navigation">
        Rhythm

        <ul>
        <li><%= link_to 'Profile', user_path(current_user.id), method: :delete, :class => 'navbar-link'%></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link'%></li>
        </ul>

      </div>

    <% else %>
    <div class="navigation">
      Rhythm

      <ul>
        <li> <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link'%></li>
        <!-- <li> <%#= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> </li> -->
      </ul>

    </div>
    <% end %>

  <% elsif current_physician && current_page?(user_path(current_physician)) %>
      <div class="navigation">
        Rhythm

        <ul>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link'%></li>
        </ul>

      </div>

  <% elsif current_physician %>
    <div class = "navigation">
      Rhythm

    <ul>
      <li><%= link_to 'Logout', destroy_physician_session_path, method: :delete, :class => 'navbar-link' %></li>
      <!-- <li><%#= link_to 'Edit Profile', edit_physician_path, :class => 'navbar-link' %></li> -->
    </ul>

    </div>

    <% elsif current_page?(root_path) %>
      <div id="nav">
        <p class="navbar-text pull-right">
          <%= link_to "User Sign up", new_user_registration_path, :class => 'navbar-link' %> 
          <%= link_to "User Login", new_user_session_path, :class => 'navbar-link'  %>
          <%= link_to "Physician Sign Up", new_physician_registration_path %> 
          <%= link_to "Physician Sign In", new_physician_session_path %>
        </p>
      </div>
    
    <% else %>
    <% end %>


    <%# if notice %>
      <!-- <p class="alert alert-success"><%= notice %></p> -->
    <%# end %>

    <%# if alert %>
      <!-- <p class="alert alert-danger"><%= alert %></p> -->

  <% unless controller_name == "home" && action_name == "index" %>
    <%= yield %>
  <% end %>


  </body>
</html>
