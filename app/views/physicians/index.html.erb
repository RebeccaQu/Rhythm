
<div id = "physicians">

	<% @physicians.each do |physician| %>

	  <%= physician.first_name %> <%= physician.last_name %> |
    
    <% if physician.friendships.where(user_id: current_user.id).exists? %>
      You are Friends
    <% else %>
		  <%= link_to "Add physician", friendships_path(friendship: {:physician_id => physician.id, :user_id => current_user.id}), method: :post %>
    <% end %>

	<% end %>

</div>
