<h1>Find A Physician</h1>

<div id="physicians">
	<% @physicians.each do |physician| %>
    <div id="physician">
	  <p> Physician: <%= physician.first_name %> <%= physician.last_name %> </p>
    <p> Email: <%= physician.email %></p>
    
    <% if physician.friendships.where(user_id: current_user.id, accepted: true).exists? %>
      <p>You are friends</p>
    <% else %>
		  <%= link_to "Add Physician", friendships_path(friendship: {:physician_id => physician.id, :user_id => current_user.id}), method: :post %>
    <% end %>
    </div>

	<% end %>
</div>